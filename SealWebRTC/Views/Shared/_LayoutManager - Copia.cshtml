                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" style="">


                            <a class="nav-link" asp-controller="Admin" asp-action="DashBoard">
                                <span class="nav-link-inner-text"><i class="fas fa-tachometer-alt" style="color: #f8cc39"></i> DashBoard</span>
                            </a>

                            <a class="nav-link" href="#">
                                <span class="nav-link-inner-text"><i class="fas fa-users" style="color: #f8cc39"></i> Usuarios</span>
                            </a>

                            <a class="nav-link" asp-controller="Meetings" asp-action="Index">
                                <span class="nav-link-inner-text"><i class="fas fa-video" style="color: #f8cc39"></i> Atenciones</span>
                            </a>

                           



                        </div>
                    </div>*@

                    <div class="btn-group ml-md-3 d-none d-md-block d-lg-block d-xl-block">
                        <button type="button" class="btn btn-outline-soft"><span class="fas fa-user"></span> @HttpContextAccessor.HttpContext.Session.GetString("Name")</button><button type="button" class="btn btn-outline-soft dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="fas fa-angle-down dropdown-arrow"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" style="">
                            <a class="dropdown-item" href="/Manager/ChangePassword" style="font-size:1rem !important;"><i class="fas fa-lock"></i> Cambio de contraseña</a>
                        </div>
                    </div>
                    <a class="btn btn-tertiary ml-md-3 text-white d-none d-md-block d-lg-block d-xl-block" style="background-color: #742a58; border-color: #6e2753;" href="/Logout">CERRAR SESIÓN <i class="fas fa-sign-out-alt"></i></a>
                    <button class="navbar-toggler ml-2" type="button" data-toggle="collapse"
                            data-target="#navbar_global" aria-controls="navbar_global" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>

    <footer class="footer pt-4 pb-3 text-white" style="position: fixed; left: 0; bottom: 0; width: 100%; color: white; text-align: center;z-index:1000;background-color:#005da4 !important ">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    2021 - SEAL
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
