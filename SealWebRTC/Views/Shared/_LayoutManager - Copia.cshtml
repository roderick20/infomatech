@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Seal - Ventanilla Virtual</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/vnd.microsoft.icon" id="favicon" />
    <link href="~/theme/css/pixel.css" rel="stylesheet" />
    <link href="~/theme/css/style.css" rel="stylesheet" />
    <link href="~/theme/vendor/@@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />

</head>
<body>
    <header class="header-global">
        <nav id="navbar-main" aria-label="Primary navigation"
             class="navbar navbar-main navbar-expand-lg navbar-theme-primary headroom navbar-dark" style="background-color:#005da4  !important ">
            <div class="container position-relative">
                <a class="navbar-brand mr-lg-5" href="#">
                    <img class="navbar-brand-dark" src="~/theme/assets/img/logo.svg" alt="Seal">
                    <img class="navbar-brand-light" src="~/theme/assets/img/logo_azul.png" alt="Seal">
                </a>
                <div class="navbar-collapse collapse" id="navbar_global">
                    <div class="navbar-collapse-header">
                        <div class="row">
                            <div class="col-6 collapse-brand">
                                <a href="./index.html#features">
                                    <img src="~/theme/assets/img/logo_azul.png" alt="Seal">
                                </a>
                            </div>
                            <div class="col-6 collapse-close">
                                <a href="#navbar_global" class="fas fa-times" data-toggle="collapse"
                                   data-target="#navbar_global" aria-controls="navbar_global" aria-expanded="false"
                                   aria-label="Toggle navigation"></a>
                            </div>
                        </div>
                    </div>
                    <ul class="navbar-nav navbar-nav-hover align-items-lg-center">
                        <li class="nav-item dropdown">
                            <a class="nav-link" asp-controller="Manager" asp-action="Salas">
                                <span class="nav-link-inner-text">Tickets Generados</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" asp-controller="Manager" asp-action="CitaProgramadas">
                                <span class="nav-link-inner-text">Citas Programadas</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" asp-controller="Manager" asp-action="Cita">
                                <span class="nav-link-inner-text">Atenciones</span>
                            </a>
                        </li>

                        <li class="nav-item  d-block d-sm-none">
                            <a href="/Manager/ChangePassword" class="nav-link"><i class="fas fa-lock"></i> Cambio de contraseña </a>
                        </li>
                        <li class="nav-item  d-block d-sm-none">
                            <a href="/Logout" class="nav-link"><i class="fas fa-sign-out-alt"></i> Salir </a>
                        </li>
                    </ul>
                </div>
                <div class="d-flex align-items-center">
