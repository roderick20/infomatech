@section scripts {

    <link href="~/yadcf/jquery.dataTables.yadcf.css" rel="stylesheet" />
    <script src="~/yadcf/jquery.dataTables.yadcf.js"></script>

    <link href="~/lib/datatable/datatables.min.css" rel="stylesheet" />
    <script src="~/lib/datatable/datatables.min.js"></script>

    <link href="~/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <script src="~/jquery-ui/jquery-ui.js"></script>

    <style>
        .yadcf-filter {
            font-size: 0.875rem !important;
            border-radius: 4px;
            box-shadow: none;
        }

        .yadcf-filter-reset-button {
            position: relative;
            /*transition: all 0.2s ease;*/
            font-size: 0.875rem;
            border-radius: 4px;
            color: #fff;
            background-color: #0576b9;
            border-color: #0576b9;
        }

        .yadcf-filter-range-date {
            font-size: 0.875rem;
            border-radius: 4px;
        }

        .yadcf-filter-wrapper-inner {
            border: 0;
        }
    </style>

    <script>
        $.datepicker.regional['es'] = {
            closeText: 'Cerrar',
            prevText: '< Ant',
            nextText: 'Sig >',
            currentText: 'Hoy',
            monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
            monthNamesShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
            dayNames: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
            dayNamesShort: ['Dom', 'Lun', 'Mar', 'Mié', 'Juv', 'Vie', 'Sáb'],
            dayNamesMin: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sá'],
            weekHeader: 'Sm',
            dateFormat: 'dd/mm/yy',
            firstDay: 1,
            isRTL: false,
            showMonthAfterYear: false,
            yearSuffix: ''
        };
        $.datepicker.setDefaults($.datepicker.regional['es']);

        $(document).ready(function () {
            var table = $('#list').DataTable({
                "processing": true,
                "serverSide": true,
                "order": [[0, "desc"]],
                "select": true,
                "ajax": {
                    "url": "IndexData",
                    "type": "POST",
                    "data": {}
                },
                "columns": [
                    { "data": "Created" },
                    { "data": "UserManager" },
                    { "data": "UserClient" },
                    { "data": "TypeAttention" },
                    { "data": "Type" },
                    { "data": "Score" },
                    { "data": "Status" },
                    {
                        "render": function (data, type, full, meta) {
                            return ' <a href="/Meetings/EditStatus?id=' + full.MeetUniqueId + '"><i class="fas fa-edit"></i></a>';
                        }
                    },
                    {
                        "render": function (data, type, full, meta) {
                            return '<a href="/Meetings/Details?id=' + full.MeetUniqueId + '">Detalle</a>';
                        }
                    }
                ],
                "dom":"lrtip",
                "language": {
                    "url": "/lib/datatable/spanish.json"
                }
            });

            yadcf.init(table, [
                {
                    column_number: 0,
                    filter_type: "range_date",
                    date_format: "dd/mm/yyyy"
                },
                {
                    column_number: 1,
                    filter_type: "auto_complete",
                    filter_default_label: ''
                },
                {
                    column_number: 2,
                    filter_type: "auto_complete",
                    filter_default_label: ''
                },
                {
                    column_number: 3,
                    filter_type: "select",
                    filter_default_label: ''
                },
                {
                    column_number: 4,
                    filter_type: "select",
                    filter_default_label: ''
                },
                {
                    column_number: 6,
                    filter_type: "select",
                    filter_default_label: ''
                }
            ]);

        });
    </script>

}
