@model IEnumerable<SealWebRTC.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutNew";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="row mt-3">
    <div class="col-12">
        <div class="card">

            <div class="card-header">
                <div class="float-start col-sm-3">
                    <h3 class="card-title">Registro de clientes</h3>
                </div>
                <div class="float-end">
                    <a asp-action="ClientsDay" class="btn btn-sm btn-primary">Clientes Registrados x Dia</a>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="list" class="table table-sm table-bordered" style="font-size:0.875rem">
                        <thead>
                            <tr>
                                <th>
                                    Tipo Doc.
                                </th>
                                <th>
                                    Nro. Documento
                                </th>
                                <th>
                                    Nombres
                                </th>
                                <th>
                                    Apellidos
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Teléfono / Celular
                                </th>
                                <th>
                                    Fecha de registro
                                </th>
                                <th>
                                    Ultimo Acceso
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <link href="~/yadcf/jquery.dataTables.yadcf.css" rel="stylesheet" />
    <script src="~/yadcf/jquery.dataTables.yadcf.js"></script>

    <link href="~/lib/datatable/datatables.min.css" rel="stylesheet" />
    <script src="~/lib/datatable/datatables.min.js"></script>

    <link href="~/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <script src="~/jquery-ui/jquery-ui.js"></script>

    <style>
        .yadcf-filter {
            font-size: 0.875rem !important;
            border-radius: 4px;
            box-shadow: none;
        }

        .yadcf-filter-reset-button {
            position: relative;
            /*transition: all 0.2s ease;*/
            font-size: 0.875rem;
            border-radius: 4px;
            color: #fff;
            background-color: #0576b9;
            border-color: #0576b9;
        }

        .yadcf-filter-range-date {
            font-size: 0.875rem;
            border-radius: 4px;
        }

        .yadcf-filter-wrapper-inner {
            border: 0;
        }
    </style>

    <script>
        $(document).ready(function () {
            var table = $('#list').DataTable({
                "processing": true,
                "serverSide": true,
                "order": [[1, "asc"]],
                "select": true,
                "ajax": {
                    "url": "IndexData",
                    "type": "POST",
                    "data": {}
                },
                "columns": [
                    { "data": "TypeDoc" },
                    { "data": "NumberDoc" },
                    { "data": "FirstName" },
                    { "data": "LastName" },
                    { "data": "Email" },
                    { "data": "CellPhone" },
                    { "data": "Created" },
                    { "data": "LastAccess" }
                ],
                "language": {
                    "url": "/lib/datatable/spanish.json"
                }
            });

            yadcf.init(table, [
                {
                    column_number: 1,
                    filter_type: "text",
                    filter_default_label: ''
                },
                {
                    column_number: 2,
                    filter_type: "text",
                    filter_default_label: ''
                },
                {
                    column_number: 3,
                    filter_type: "text",
                    filter_default_label: ''
                },
                {
                    column_number: 4,
                    filter_type: "text",
                    filter_default_label: ''
                },
                {
                    column_number: 5,
                    filter_type: "text",
                    filter_default_label: ''
                }
            ]);

        });
                
    </script>

}
