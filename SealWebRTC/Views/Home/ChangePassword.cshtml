@{
    ViewData["Title"] = "Actualizar Contraseña";
    Layout = "_LayoutClient";
}
<div class="section mt-5">
    <div class="container">
        <div class="card border-light mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box">
                            <h4 class="page-title" style="font-size:1rem">Actualizar Contraseña</h4>
                            <hr style="margin-top: 0.5rem; margin-bottom: 0.5rem;" />
                        </div>
                    </div>
                    <div class="col-12 col-md-6">

                        <form asp-action="ChangePassword">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Nueva Contraseña:</label>
                                <input type="password" name="Password" class="form-control form-control-sm" required style="font-size: 0.875rem" />
                                <ul style="font-size:0.875rem">
                                    <li style="font-size:0.875rem">
                                        La contraseña debe contener al menos una letra minúscula.
                                    </li>
                                    <li style="font-size:0.875rem">
                                        La contraseña debe contener al menos una letra mayúscula.
                                    </li>
                                    <li style="font-size:0.875rem">
                                        La contraseña no debe tener menos de 8 ni más de 15 caracteres.
                                    </li>
                                    <li style="font-size:0.875rem">
                                        La contraseña debe contener al menos un valor numérico.
                                    </li>
                                    <li style="font-size:0.875rem">
                                        La contraseña debe contener al menos un carácter especial (!@@#$%^&*()_+=\[{\]};:<>|./?,-)
                                    </li>
                                </ul>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Actualizar" class="btn btn-sm btn-primary" style="font-size:0.875rem" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>