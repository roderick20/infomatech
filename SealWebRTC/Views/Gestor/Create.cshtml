@model SealWebRTC.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutAdmin";
}

<main style="min-height:500px">
    <div class="container" style="margin-top: 100px">
        <div class="row">
            <div class="col-12">
                <div class="card border-light p-2 p-md-4 mb-2">
                    <div class="card-header border-0 bg-white pt-0">
                        <div class="post-meta">
                            <div class="media d-flex align-items-center justify-content-between">
                                <div class="post-group">
                                    <h4 style="margin-bottom: 0px;">Agregar Usuario</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr style="margin-top: 0px;margin-bottom: 0px;">
                    <div class="card-body py-4 px-0">

                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="TypeDoc" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="TypeDoc" class="form-control" />
                                    <span asp-validation-for="TypeDoc" class="text-danger"></span>
                                </div>
                                <label asp-for="NumberDoc" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="NumberDoc" class="form-control" />
                                    <span asp-validation-for="NumberDoc" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                                <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <label asp-for="CellPhone" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="CellPhone" class="form-control" />
                                    <span asp-validation-for="CellPhone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <label asp-for="Rol" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="Rol" class="form-control" />
                                    <span asp-validation-for="Rol" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Enabled" /> @Html.DisplayNameFor(model => model.Enabled)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                                </label>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="ConfirmationEmail" /> @Html.DisplayNameFor(model => model.ConfirmationEmail)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Recovery" /> @Html.DisplayNameFor(model => model.Recovery)
                                </label>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <a asp-action="Index" class="btn btn-gray"><i class="fas fa-arrow-left"></i> Regresar</a>
                                </div>
                                <div class="col-6 text-right">
                                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Grabar</button>
                                </div>
                            </div>

                            
                        </form>

                        <div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
